<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOtp"
    android:background="@drawable/login_screen"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/screenImage"
        android:layout_width="396dp"
        android:layout_height="457dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/cercle"
            android:padding="20dp"
            android:src="@drawable/otp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please enter the OTP send to ypur mobile number"
            android:textStyle="bold"
            android:textColor="#F1F1F1"
            android:textAlignment="center"
            />

    </LinearLayout>

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#345"
        app:bar_active_color="#0F72E7"
        app:bar_enabled="true"
        app:bar_height="5dp"
        app:box_margin="2dp"
        app:box_margin_left="5dp"
        app:height="40dp"
        app:length="4"
        app:otp_text_size="24dp"
        app:width="40dp"
        android:layout_below="@+id/screenImage"/>

</RelativeLayout>